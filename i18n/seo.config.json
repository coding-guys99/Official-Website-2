{
  "site": {
    "siteName": "KeySearch",
    "canonicalBase": "https://your-domain.com",
    "og": {
      "type": "website",
      "image": "https://your-domain.com/assets/og/og-default.png",
      "site_name": "KeySearch"
    },
    "twitter": {
      "card": "summary_large_image",
      "site": "@keysearch",
      "creator": "@keysearch"
    }
  },

  "links": [
    { "rel": "icon", "href": "/assets/icons/favicon-32.png", "sizes": "32x32", "type": "image/png" },
    { "rel": "icon", "href": "/assets/icons/favicon-16.png", "sizes": "16x16", "type": "image/png" },
    { "rel": "apple-touch-icon", "href": "/assets/icons/apple-touch-icon.png", "sizes": "180x180" },
    { "rel": "manifest", "href": "/site.webmanifest" },

    { "rel": "preconnect",   "href": "https://fonts.gstatic.com", "crossorigin": "" },
    { "rel": "preconnect",   "href": "https://fonts.googleapis.com" },
    { "rel": "dns-prefetch", "href": "//fonts.gstatic.com" },
    { "rel": "dns-prefetch", "href": "//fonts.googleapis.com" }
  ],

  "robots": "index,follow,max-image-preview:large",
  "themeColor": "#0f0f0f",

  "verifications": [
    { "name": "google-site-verification", "content": "YOUR_GOOGLE_CODE" },
    { "name": "msvalidate.01",            "content": "YOUR_BING_CODE" },
    { "name": "yandex-verification",      "content": "YOUR_YANDEX_CODE" }
  ],

  "alternates": {
    "en":    "https://your-domain.com/en/",
    "zh-Hant": "https://your-domain.com/zh-tw/",
    "zh-Hans": "https://your-domain.com/zh-cn/",
    "ja":    "https://your-domain.com/ja/",
    "ko":    "https://your-domain.com/ko/"
  },

  "jsonld": [
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "KeySearch",
      "url": "https://your-domain.com/",
      "logo": "https://your-domain.com/assets/logo-512.png",
      "sameAs": [
        "https://twitter.com/keysearch",
        "https://www.youtube.com/@keysearch"
      ]
    },
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "KeySearch",
      "url": "https://your-domain.com/",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://your-domain.com/?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  ],

  "pages": {
    "home":    { "canonical": "https://your-domain.com/index.html" },
    "features":{ "canonical": "https://your-domain.com/features.html" },
    "download":{ "canonical": "https://your-domain.com/download.html" },
    "pricing": { "canonical": "https://your-domain.com/pricing.html" },
    "about":   { "canonical": "https://your-domain.com/about.html" },
    "support": { "canonical": "https://your-domain.com/support.html" },
    "news": {
      "canonical": "https://your-domain.com/news.html",
      "jsonld": [
        {
          "@context": "https://schema.org",
          "@type": "Blog",
          "name": "KeySearch â€“ Product Updates",
          "url": "https://your-domain.com/news.html"
        }
      ]
    },
    "donate":  { "canonical": "https://your-domain.com/donate.html" }
  },

  "metaExtra": [
    { "name": "format-detection", "content": "telephone=no" }
  ]
}